                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="sliderMP2B" Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Left" Minimum="0.25"  Margin="4"/>
                    <ScrollViewer Name="scrollViewerMP2B" Grid.Column="1" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible" Background="{DynamicResource BackgroundBrush}">
                        <Grid Name="gridMP2B" Width="1312" Height="708" RenderTransformOrigin="0.5,0.5">
                            <Grid.LayoutTransform>
