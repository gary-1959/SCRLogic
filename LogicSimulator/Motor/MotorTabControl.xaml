<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SharpCircuit"
             xmlns:SharpCircuit="clr-namespace:SharpCircuit" x:Class="SharpCircuit.MotorTabControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <RadialGradientBrush x:Key="BackgroundBrush">
            <GradientStop Color="Black" Offset="1"/>
            <GradientStop Color="White"/>
        </RadialGradientBrush>
    </UserControl.Resources>
    <Grid>

        <TabControl x:Name="tabControl" Margin="0" TabStripPlacement="Bottom">
            <!-- MP1A -->
            <TabItem Header="MP1A">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="sliderMP1A" Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Left" Minimum="0.25"  Margin="4"/>
                    <ScrollViewer Name="scrollViewerMP1A" Grid.Column="1" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible" Background="{DynamicResource BackgroundBrush}">
                        <Grid Name="gridMP1A" Width="1312" Height="708" RenderTransformOrigin="0.5,0.5">
                            <Grid.LayoutTransform>
                                <TransformGroup>
                                    <ScaleTransform x:Name="scaleTransformMP1A"/>
                                </TransformGroup>
                            </Grid.LayoutTransform>
                            <local:MotorBox x:Name="MP1A" Margin="0"/>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <!-- MP1B -->
            <TabItem Header="MP1B">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="sliderMP1B" Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Left" Minimum="0.25"  Margin="4"/>
                    <ScrollViewer Name="scrollViewerMP1B" Grid.Column="1" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible" Background="{DynamicResource BackgroundBrush}">
                        <Grid Name="gridMP1B" Width="1312" Height="708" RenderTransformOrigin="0.5,0.5">
                            <Grid.LayoutTransform>
                                <TransformGroup>
                                    <ScaleTransform x:Name="scaleTransformMP1B"/>
                                </TransformGroup>
                            </Grid.LayoutTransform>
                            <local:MotorBox x:Name="MP1B" Margin="0"/>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <!-- MP2A -->
            <TabItem Header="MP2A">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
