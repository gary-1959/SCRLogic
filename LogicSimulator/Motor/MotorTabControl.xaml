                        <Grid Name="gridMP2A" Width="1312" Height="708" RenderTransformOrigin="0.5,0.5">
                            <Grid.LayoutTransform>
                                <TransformGroup>
                                    <ScaleTransform x:Name="scaleTransformMP2A"/>
                                </TransformGroup>
