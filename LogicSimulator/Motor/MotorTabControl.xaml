                                </TransformGroup>
                            </Grid.LayoutTransform>
                            <local:MotorBox x:Name="MP2B" Margin="0"/>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <!-- DWA -->
            <TabItem Header="DWA">
