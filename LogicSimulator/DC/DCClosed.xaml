                    </Grid.ColumnDefinitions>
                    <Image x:Name="DWHandwheel" Grid.Column="1" Margin="0" Source="/SCRLogic;component/Resources/HANDWHEEL-4.png" RenderTransformOrigin="0.5,0.5">
