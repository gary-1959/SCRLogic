                        <Image x:Name="GEN3Lamp" Margin="0" Source="/SCRLogic;component/Resources/LAMP-RED-OFF.png" Grid.Column="2"/>
                        <Image x:Name="GEN4Lamp" Margin="0" Source="/SCRLogic;component/Resources/LAMP-RED-OFF.png" Grid.Column="3"/>
                    </Grid>
                    <Grid Margin="0" Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>

                        </Grid.ColumnDefinitions>
                        <Image x:Name="SCR1Lamp" Margin="0" Source="/SCRLogic;component/Resources/LAMP-GREEN-OFF.png" Grid.Column="0"/>
                        <Image x:Name="SCR2Lamp" Margin="0" Source="/SCRLogic;component/Resources/LAMP-GREEN-OFF.png" Grid.Column="1"/>
                        <Image x:Name="SCR3Lamp" Margin="0" Source="/SCRLogic;component/Resources/LAMP-GREEN-OFF.png" Grid.Column="2"/>
                        <Image x:Name="SCR4Lamp" Margin="0" Source="/SCRLogic;component/Resources/LAMP-GREEN-OFF.png" Grid.Column="3"/>
                        <Image x:Name="PTLamp" Margin="0" Source="/SCRLogic;component/Resources/LAMP-GREEN-OFF.png" Grid.Column="4"/>
                        <Image x:Name="CP1Lamp" Margin="0" Source="/SCRLogic;component/Resources/LAMP-GREEN-OFF.png" Grid.Column="5"/>
                    </Grid>
                    <Grid Margin="0" Grid.Row="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>

                        </Grid.ColumnDefinitions>
                        <Image x:Name="MP1Lamp" Margin="0" Source="/SCRLogic;component/Resources/LAMP-RED-OFF.png" Grid.Column="0"/>
                        <Image x:Name="MP2Lamp" Margin="0" Source="/SCRLogic;component/Resources/LAMP-RED-OFF.png" Grid.Column="1"/>
                        <Image x:Name="DWLamp" Margin="0" Source="/SCRLogic;component/Resources/LAMP-RED-OFF.png" Grid.Column="2"/>
                        <Image x:Name="RTLamp" Margin="0" Source="/SCRLogic;component/Resources/LAMP-RED-OFF.png" Grid.Column="3"/>
                        <Image x:Name="SystemLamp" Margin="0" Source="/SCRLogic;component/Resources/LAMP-RED-OFF.png" Grid.Column="4"/>
                        <Image x:Name="CP2Lamp" Margin="0" Source="/SCRLogic;component/Resources/LAMP-GREEN-OFF.png" Grid.Column="5"/>
