                        <ColumnDefinition Width="166*"/>
                        <ColumnDefinition Width="123*"/>
                        <ColumnDefinition Width="62*"/>
                    </Grid.ColumnDefinitions>
                    <Image x:Name="MP1Handwheel" Grid.Column="1" Margin="0" Source="/SCRLogic;component/Resources/HANDWHEEL-3.png" RenderTransformOrigin="0.5,0.5">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="1"/>
