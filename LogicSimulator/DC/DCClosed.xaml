                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                    <Image x:Name="RTHandwheel" Grid.Column="3" Margin="0,0,2,0" Source="/SCRLogic;component/Resources/HANDWHEEL-4.png" RenderTransformOrigin="0.5,0.5">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="1"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                </Grid>
            </Grid>
        </Grid>
        <!-- SWITCHES -->
        <Grid Margin="0" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="155*"/>
                <ColumnDefinition Width="104*"/>
