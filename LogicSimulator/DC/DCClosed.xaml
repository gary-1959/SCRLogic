            </Grid>
            <Grid Grid.Column="7" Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="53*"/>
                    <RowDefinition Height="56*"/>
                    <RowDefinition Height="86*"/>
                </Grid.RowDefinitions>
                <Grid Margin="0,50,-0.4,86.2" Grid.RowSpan="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="23*"/>
                        <ColumnDefinition Width="59*"/>
                        <ColumnDefinition Width="23*"/>
                    </Grid.ColumnDefinitions>
                </Grid>
                <Image x:Name="AlarmSilence" Margin="0" Source="/SCRLogic;component/Resources/PB-BLACK-UP.png" Grid.Row="1"/>
            </Grid>
        </Grid>
        <!-- TOP ROW -->
        <Grid Margin="0" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="566*"/>
                <ColumnDefinition Width="727*"/>
            </Grid.ColumnDefinitions>
            <!-- ASSIGNMENT SWITCH -->
            <Grid Margin="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="244*"/>
                    <ColumnDefinition Width="207*"/>
                    <ColumnDefinition Width="153*"/>
                </Grid.ColumnDefinitions>
                <Grid Margin="0" Grid.Column="1" Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70*"/>
                        <RowDefinition Height="120*"/>
                        <RowDefinition Height="36*"/>
                    </Grid.RowDefinitions>
                    <Image x:Name="AssignmentSwitch" Margin="0" Source="/SCRLogic;component/Resources/PISTOL-GRIP.png" RenderTransformOrigin="0.5,0.5" Grid.Row="1" />
                </Grid>
            </Grid>
            <!-- LAMPS & METER -->
            <Grid Grid.Column="1" Margin="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="44*"/>
                    <ColumnDefinition Width="318*"/>
                    <ColumnDefinition Width="205*"/>
                    <ColumnDefinition Width="160*"/>
                </Grid.ColumnDefinitions>
                <!-- METER -->
                <Grid Margin="0" Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="31*"/>
                        <RowDefinition Height="191*"/>
                        <RowDefinition Height="31*"/>
                        <RowDefinition Height="46*"/>
                        <RowDefinition Height="25   *"/>
                    </Grid.RowDefinitions>
                    <Grid Margin="0" Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8*" />
                            <ColumnDefinition Width="191*" />
                            <ColumnDefinition Width="6*" />
                        </Grid.ColumnDefinitions>
