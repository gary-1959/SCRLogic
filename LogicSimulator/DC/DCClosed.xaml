                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                    <Image x:Name="MP2Handwheel" Grid.Column="3" Margin="0" Source="/SCRLogic;component/Resources/HANDWHEEL-3.png" RenderTransformOrigin="0.5,0.5">
