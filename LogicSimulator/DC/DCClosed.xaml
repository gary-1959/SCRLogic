                <Image x:Name="DWSwitch" Margin="0" Source="/SCRLogic;component/Resources/SWITCH-1.png" RenderTransformOrigin="0.5,0.5" Grid.Row="1"/>
            </Grid>
            <Grid Grid.Column="11" Margin="0,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="43*"/>
                    <RowDefinition Height="106*"/>
                    <RowDefinition Height="46*"/>
                </Grid.RowDefinitions>
                <Image x:Name="RTSwitch" Margin="0" Source="/SCRLogic;component/Resources/SWITCH-1.png" RenderTransformOrigin="0.5,0.5" Grid.Row="1"/>
            </Grid>
            <Grid Grid.Column="3" Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="38*"/>
                    <RowDefinition Height="87*"/>
                    <RowDefinition Height="70*"/>
